---
import IngredientCard from "@components/IngredientCard.astro";
---

<section id="ingredients">
    <div>
        <span>Ingredientes</span>
        <article>
            <h2>Ingredientes</h2>
            <p>La simplicidad de tres elementos que crean una experiencia sensorial única</p>
        </article>
    </div>
    <div>
        <IngredientCard
            index={"1"}
            image="/queso.png"
            name="Queso sin sal"
            description="Base fundamental que aporta cremosidad."
            quantity="½ kilo"
        />
        <IngredientCard
            index={"2"}
            image="/dulce.png"
            name="Dulce o miel"
            quantity="½ tapa o 1 taza"
            description="Dulzor esencial para el balance perfecto."
        />
        <IngredientCard
            index={"3"}
            image="/canela.png"
            name=" Canela"
            quantity="Al gusto"
            description="Opcional, añade aroma y carácter."
        />
    </div>
</section>

<style>
    section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    section {
        position: relative;
        width: 100%;
        display: flex;
        align-items: start;
        overflow: clip;
        background: url("/prueba.jpg") no-repeat center/cover fixed;
    }

    section > div {
        flex: 1;
        z-index: 2;
        display: flex;
        flex-direction: column;
    }

    section > div:first-child {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: end;
        height: 100dvh;
        position: sticky;
        top: 0;
        left: 0;
    }

    section > div:last-child {
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(15px);
    }

    section > div > span {
        font-size: 300px;
        color: var(--neutral-50);
        position: absolute;
        top: 32px;
        left: 50%;
        transform: translateX(-31%);
    }

    section > div > article {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    section > div > article > h2 {
        font-size: 42px;
        color: var(--primary-300);
    }

    section > div > article > p {
        font-size: 16px;
        color: var(--neutral-50);
        margin-left: 2rem;
        max-width: 40ch;
    }
</style>
