---
import Input from "@components/Input.astro";
import Button from "@components/Button.astro";
import NewsLetterIcon from "@icons/NewsLetterIcon.astro";

type Props = {
    className?: "slide__in-left";
};

const { className } = Astro.props;
---

<section class={className}>
    <h4>Suscríbete para recibir recetas semanalmente</h4>
    <div>
        <form action="">
            <Input type="email" placeholder="Escribe tu email" />
            <Button type="submit" className="primary">
                <NewsLetterIcon width={24} height={24} color="var(--neutral-50)" />
            </Button>
        </form>
        <p>
            Al suscribirte, aceptas nuestra <a href="#">Política de Privacidad</a> y das tu consentimiento para recibir actualizaciones
            de nuestra empresa.
        </p>
    </div>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 500px;
        color: var(--neutral-50);
        grid-area: form;
        align-self: flex-end;
    }

    section.slide__in-left {
        animation: slideInLeft 0.5s ease-in-out;
        animation-delay: var(--slide-in-delay);
    }

    section > div {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    section > div > form {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    section > div > p {
        font-size: 0.6rem;
    }

    section > div > p > a {
        text-decoration: underline;
    }

    @keyframes slideInLeft {
        from {
            transform: translateX(700px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
</style>
