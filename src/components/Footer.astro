---
import GithubIcon from "@icons/GithubIcon.astro";
import LinkedInIcon from "@icons/LinkedInIcon.astro";
import ResumeIcon from "@icons/ResumeIcon.astro";
import NewsletterForm from "./NewsletterForm.astro";
---

<footer>
    <section class="main">
        <h2>Turríka</h2>
        <div>
            <NewsletterForm />
            <nav>
                <div>
                    <h3>Receta</h3>
                    <ul>
                        <li>
                            <a href="#ingredients">Ingredientes</a>
                        </li>
                        <li>
                            <a href="#steps">Pasos</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3>Legal</h3>
                    <ul>
                        <li>
                            <a href="#privacy">Política de privacidad</a>
                        </li>
                        <li>
                            <a href="#terms">Términos y condiciones</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </section>
    <div></div>
    <section class="social">
        <span>© 2025 Turríka. Todos los derechos reservados.</span>
        <nav>
            <ul>
                <li>
                    <a href="">
                        <LinkedInIcon width={24} height={24} color="var(--neutral-50)" />
                    </a>
                </li>
                <li>
                    <a href="">
                        <ResumeIcon width={24} height={24} color="var(--neutral-50)" />
                    </a>
                </li>
                <li>
                    <a href="">
                        <GithubIcon width={24} height={24} color="var(--neutral-50)" />
                    </a>
                </li>
            </ul>
        </nav>
    </section>
    <aside>
        <span>Turríka</span>
    </aside>
</footer>

<style>
    footer {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8rem;
        padding: 1rem;
        min-height: 100dvh;
        background-color: var(--neutral-900);
        color: var(--neutral-50);
        overflow: hidden;
        z-index: 1;
    }

    footer > .main {
        width: min(var(--max-width), 100%);
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        gap: 1rem;
    }

    .main > h2 {
        font-size: 250px;
    }

    .main > div {
        width: 100%;
        display: flex;
        justify-content: space-between;
        gap: 2rem;
    }

    .main > div > nav {
        display: flex;
        gap: 2rem;
    }

    .main > div > nav > div,
    .main > div > nav > div > ul {
        display: flex;
        flex-direction: column;
    }

    .main > div > nav > div {
        gap: 1.5rem;
    }

    .main > div > nav > div > ul {
        gap: 1rem;
    }

    footer > div {
        width: min(var(--max-width), 100%);
        height: 1px;
        background-color: var(--neutral-50);
    }

    footer > .social {
        width: min(var(--max-width), 100%);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .social > nav > ul {
        display: flex;
        gap: 1rem;
    }

    aside {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-47%, -33%) rotate(-35deg);
        font-size: 500px;
        opacity: 0.1;
        z-index: -1;
    }
</style>
