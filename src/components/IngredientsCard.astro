---
import PlusIcon from "@icons/PlusIcon.astro";

type Props = {
    index: number;
    name: string;
    quantity: string;
    description: string;
};

const { index, name, quantity, description } = Astro.props;
---

<article>
    <header>
        <div>
            <PlusIcon width={24} height={24} color="var(--neutral-50)" />
        </div>
        <span></span>
    </header>
    <section>
        <h4>{name}</h4>
        <p>{quantity}</p>
    </section>
    <footer>{description}</footer>
    <aside>
        <span>{(index + "").padStart(2, "0")}</span>
    </aside>
</article>

<style>
    article {
        padding: 64px;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background-color: var(--neutral-100);
    }

    article > header {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    article > header > div {
        display: grid;
        place-items: center;
        padding: 0.5rem;
        background-color: var(--neutral-900);
        border-radius: 99999px;
    }

    article > header > span {
        width: 100%;
        height: 1px;
        background-color: var(--neutral-900);
    }

    article > aside {
        position: absolute;
        top: 1rem;
        right: -1rem;
    }

    article > aside > span {
        font-size: 96px;
        font-weight: 700;
        color: var(--neutral-400);
        opacity: 0.5;
    }
</style>
