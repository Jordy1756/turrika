{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@sections/*": ["src/sections/*"],
            "@icons/*": ["src/assets/icons/*"],
            "@definitions/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
